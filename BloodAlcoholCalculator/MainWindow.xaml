<Window x:Class="BloodAlcoholCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blood Alcohol Calculator"
        Height="750"
        Width="480"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E1E">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome 
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox" x:Key="CenteredComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#444" BorderThickness="1" CornerRadius="0,0,10,10" Background="#1E1E1E">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  Background="#2D2D30"
                  Height="40"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Blood Alcohol Calculator"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"/>
                <Button x:Name="MinimizeButton"
                        Grid.Column="1"
                        Content="_"
                        Width="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="16"
                        Click="MinimizeButton_Click"/>
                <Button x:Name="MaximizeRestoreButton"
                        Grid.Column="2"
                        Content="▢"
                        Width="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        Click="MaximizeRestoreButton_Click"/>
                <Button x:Name="CloseButton"
                        Grid.Column="3"
                        Content="X"
                        Width="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>

            <UniformGrid Rows="9" Grid.Row="1" Margin="10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Select Gender"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="MaleButton"
                                    Content="Male"
                                    Margin="0,0,10,0"
                                    Click="SelectGender"
                                    Background="#87CEFA"
                                    Foreground="Black"
                                    FontSize="14"
                                    Width="100"
                                    Height="35"/>
                            <Button x:Name="FemaleButton"
                                    Content="Female"
                                    Click="SelectGender"
                                    Background="#FFB6C1"
                                    Foreground="Black"
                                    FontSize="14"
                                    Width="100"
                                    Height="35"/>
                        </StackPanel>
                        <TextBlock x:Name="GenderLabel"
                                   Text="Selected Gender: Male"
                                   HorizontalAlignment="Center"
                                   Foreground="Gray"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Enter Body Weight"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="5,0">
                        <TextBox x:Name="WeightTextBox"
                                 Style="{StaticResource RoundedTextBox}"
                                 Width="150"
                                 Height="35"
                                 FontSize="14"/>
                        <ComboBox x:Name="WeightUnitComboBox"
                                  Style="{StaticResource CenteredComboBox}"
                                  Width="80"
                                  Margin="10,0,0,0">
                            <ComboBoxItem Content="KG"/>
                            <ComboBoxItem Content="LBS"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Time Since First Drink"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="5,0">
                        <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                            <TextBlock Text="Hours"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"
                                       FontSize="12"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="TimeHoursTextBox"
                                     Style="{StaticResource RoundedTextBox}"
                                     Width="70"
                                     Height="35"
                                     FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Minutes"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"
                                       FontSize="12"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="TimeMinutesTextBox"
                                     Style="{StaticResource RoundedTextBox}"
                                     Width="70"
                                     Height="35"
                                     FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Number of Drinks"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <TextBox x:Name="DrinkAmountTextBox"
                             Grid.Row="1"
                             Style="{StaticResource RoundedTextBox}"
                             HorizontalAlignment="Center"
                             Width="250"
                             Height="35"
                             FontSize="14"/>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Select Unit"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <ComboBox x:Name="DrinkUnitComboBox"
                              Grid.Row="1"
                              Style="{StaticResource CenteredComboBox}">
                        <ComboBoxItem Content="Glass"/>
                        <ComboBoxItem Content="ML"/>
                        <ComboBoxItem Content="OZ"/>
                    </ComboBox>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Select Drink Type"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <ComboBox x:Name="DrinkTypeComboBox"
                              Grid.Row="1"
                              Style="{StaticResource CenteredComboBox}">
                        <ComboBoxItem Content="Beer"/>
                        <ComboBoxItem Content="Wine"/>
                        <ComboBoxItem Content="Whiskey"/>
                        <ComboBoxItem Content="Vodka"/>
                        <ComboBoxItem Content="Cocktail"/>
                    </ComboBox>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Custom Alcohol Percentage (Optional)"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <TextBox x:Name="CustomAlcoholTextBox"
                             Grid.Row="1"
                             Style="{StaticResource RoundedTextBox}"
                             HorizontalAlignment="Center"
                             Width="250"
                             Height="35"
                             FontSize="14"/>
                </Grid>

                <Grid>
                    <Button Content="Calculate BAC"
                            Click="CalculateBAC"
                            HorizontalAlignment="Center"
                            Width="250"
                            Height="40"
                            Background="#90EE90"
                            Foreground="Black"
                            FontSize="16"
                            FontWeight="Bold"/>
                </Grid>

                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="BACResultLabel"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,3,0,3"/>
                    <TextBlock x:Name="DrivingStatusLabel"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,3,0,3"/>
                    <TextBlock x:Name="SoberTimeLabel"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </UniformGrid>
        </Grid>
    </Border>
</Window>
